    "@sentry/nextjs": "^10.38.0",
    "@stripe/stripe-js": "^8.7.0",
    "@supabase/auth-helpers-nextjs": "^0.15.0",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.90.1",
    "clsx": "^2.1.1",
    "html2canvas": "^1.4.1",
    "jose": "^6.1.3",
    "jspdf": "^4.1.0",
    "leaflet": "^1.9.4",
    "lru-cache": "^11.2.5",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "next-sanity": "^11.6.12",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-icons": "^5.5.0",
    "react-leaflet": "^5.0.0",
    "resend": "^6.9.1",
    "sanity": "^4.22.0",
    "stripe": "^20.3.0",
    "tailwind-merge": "^3.4.0",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.1.6",
